<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cardview_image3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/driver" />

                <TextView
                    android:id="@+id/cardview_list_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/cardview_image3"
                    android:paddingBottom="5dp"
                    android:text="Fariz Putra Dandi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/short_description3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview_list_title3"
                    android:layout_toRightOf="@+id/cardview_image3"
                    android:text="B 1890 XZY | Honda Beat Fi"
                    android:textColor="#8b8b8b" />

                <TextView
                    android:id="@+id/nohp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/short_description3"
                    android:layout_toRightOf="@+id/cardview_image3"
                    android:text="087855857881"
                    android:textColor="#8b8b8b"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:backgroundTint="@color/putih"
                    android:drawableStart="@drawable/telfon"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/colorPrimary"
                    android:text="Telefon Kurir"
                    android:textColor="@color/colorPrimary"
                    android:transitionName="ButtonS" />

                <Button
                    android:id="@+id/sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/putih"
                    android:drawableStart="@drawable/sms"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/colorPrimary"
                    android:text="SMS Kurir"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:transitionName="ButtonS" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>